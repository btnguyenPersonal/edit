+void jumpToHarpoon(State* state, unsigned int num) {
+    if (0 < num && num <= state->harpoonFiles.size()) {
+        state->harpoonIndex = num - 1;
+        state->resetState(state->harpoonFiles[state->harpoonIndex]);
